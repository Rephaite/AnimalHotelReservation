@model Reservation
@{
    ViewBag.Title = "Create Reservation";
}

<h2>Create Reservation</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CheckIn"></label>
        <input asp-for="CheckIn" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CheckOut"></label>
        <input asp-for="CheckOut" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="RoomId">Room</label>
        <select asp-for="RoomId" asp-items="@(new SelectList(ViewBag.Rooms, "Id", "Number"))" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
